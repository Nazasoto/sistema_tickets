{
  "version": 2,
  "builds": [
    {
      "src": "sistema-gestion",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "framework": "vite"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "^/(.*)$",
      "dest": "/$1",
      "check": true
    }
  ]
}
