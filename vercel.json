{
  "version": 2,
  "builds": [
    {
      "src": "sistema-gestion/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://soporte-8ja2.onrender.com/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/sistema-gestion/dist/index.html"
    }
  ]
}
