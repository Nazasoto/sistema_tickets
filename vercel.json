{
  "version": 2,
  "builds": [
    {
      "src": "sistema-gestion",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "framework": "vite",
        "installCommand": "npm install",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "^/(.*)$",
      "dest": "/$1",
      "check": true
    }
  ]
}
