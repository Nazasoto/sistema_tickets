{
  "version": 2,
  "builds": [
    {
      "src": "sistema-gestion/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "(.*)",
      "dest": "/sistema-gestion/dist/index.html"
    }
  ]
}
