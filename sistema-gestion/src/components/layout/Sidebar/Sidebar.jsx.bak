            className={`nav-item ${location.pathname === item.path ? 'active' : ''} ${item.className || ''}`}
            onClick={item.path === '/logout' ? handleLogout : null}
          >
            <span className="nav-icon">{item.icon}</span>
            {!collapsed && (
